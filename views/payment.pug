extends layout  

block content
    h1(class="tabletop") Payment Records
    table
        thead
            tr
                th Username
                th Amount Paid
                th Date (mm/dd/yyyy)
        tbody
            each user in data
                each item in user.payments
                    tr
                        th #{user.username}
                        th #{item.amount}
                        th #{item.date.month+"/"+item.date.day+"/"+item.date.year}
    a(href="/pay/add" class="link") Add payment record